<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CountryFlags">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CountryFlags;component/Themes/FlagIcon.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:FlagIcon}" BasedOn="{StaticResource CountryFlags.Styles.CountryFlag}" />
    <Style TargetType="{x:Type local:FlagIconCircle}" BasedOn="{StaticResource CountryFlags.Styles.CountryFlagCircle}" />
</ResourceDictionary>
